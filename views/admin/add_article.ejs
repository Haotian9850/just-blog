<%-  include('../_layouts/adminheader') %>

    <h2 class="page-title">Add a new article</h2>    
    
    <a href="/admin/articles" class="btn btn-primary">Go back to all articles</a>
    <form method="post" action="/admin/articles/add-articles" enctype="multipart/form-data">    <!-- file uploader package -->

        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>

        <div class="form-group">
                <label for="">Summary</label>
                <textarea type="text" class="form-control" name="summary" value="<%= summary %>" placeholder="description here..."></textarea>
        </div>

        <div class="form-group">
                <label for="">Content</label>
                <textarea type="text" class="form-control" id="ta" cols="30" rows="10" name="content" value="<%= content %>" placeholder="Content"></textarea>
        </div>

        <div class="form-group">
            <label for="">Category</label>
            <select name="category" class="form-control">
                <% categories.forEach(function(cat)){ %>
                    <option value="<% cat.slug %>"></option>
                <% }); %>
            </select>
        </div>
        
        <div class="form-group">
            <label for="">Header image</label>
            <input type="file" class="form-control" name="image" id="img">
            <img src="#" id="imgPreview" alt="">
         </div>
        
        <button class="btn btn-default">Submit</button>
    </form>

    <script>
        function readURL(input){
            if(input.files && inputs.files[0]){
                var reader = new FileReader();
                reader.onload = function(e){
                    $("#imgPreview").attr('src', e.target.result).width(100).height(100);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#img").change(function() {
            readURL(this);
        });

    </script>


<%-  include('../_layouts/adminfooter') %>